var logPrefix = 'merc: ';

function MLLog(msg, color) {
	var defaultColor = '\033[00;00m';
	
	var output = logPrefix;
	
	switch (color) {
		case 'black':
			output += '\033[0;30m';
			break;
		case 'red':
			output += '\033[01;31m';
			break;
		case 'green':
			output += '\033[0;32m';
			break;
		case 'yellow':
			output += '\033[0;33m';
			break;
		case 'blue':
			output += '\033[0;34m';
			break;
		case 'magenta':
			output += '\033[0;35m';
			break;
		case 'cyan':
			output += '\033[0;36m';
			break;
		case 'white':
		case 'grey':
			output += '\033[0;37m';	
			break;
		default:
			output += '';
	}

	output += msg + defaultColor;
	
	console.log(output);
}

function getFileContents(filePath, encoding) {
	var content = null;
	var encoding = (typeof encoding === 'undefined') ? 'utf-8' : encoding;
	
	if ( path.existsSync(filePath) ) {			
		content = fs.readFileSync(filePath, encoding=encoding);
	}
	
	return content;
}

function getFileSize(filename, callback) {
	var stat = fs.statSync(filename);

	return stat.size;
}

function die(msg) {	
	if (msg) MLLog(msg, 'red');
	
	process.exit(1);
}

function warning(msg) {
	MLLog(msg, 'yellow');
}

function slice(a, start) {
		return Array.prototype.slice.call(a, start == null ? 0 : start);
}

