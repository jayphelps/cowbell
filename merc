	/* Number */ 
	crc32 = function( /* String */ str, /* Number */ crc ) { 
		if( crc == undefined ) crc = 0; 
		var n = 0; //a number between 0 and 255 
		var x = 0; //an hex number 
 
		crc = crc ^ (-1); 
		for( var i = 0, iTop = str.length; i < iTop; i++ ) { 
			n = ( crc ^ str.charCodeAt( i ) ) & 0xFF; 
			x = "0x" + table.substr( n * 9, 8 ); 
			crc = ( crc >>> 8 ) ^ x; 
		} 
		return crc ^ (-1); 
	}; 
