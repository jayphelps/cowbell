function show_copyright(comments) {
	var ret = "";
	for (var i = 0; i < comments.length; ++i) {
		var c = comments[i];
		if (c.type == "comment1") {
			ret += "//" + c.value + "\n";
		} else {
			ret += "/*" + c.value + "*/";
		}
	}
	return ret;
};

function uglify(sourceCode) {
	var uglifiedCode = '';

	var tok = jsp.tokenizer(sourceCode);
	var c = tok();
	uglifiedCode += show_copyright(c.comments_before);

	// Parse code and get the initial AST
	var ast = jsp.parse(sourceCode);
	// Get a new AST with mangled names
	ast = pro.ast_mangle(ast);
	// Get an AST with compression optimizations
	ast = pro.ast_squeeze(ast);
	// Final compressed code here
	uglifiedCode += pro.gen_code(ast);
	
	return uglifiedCode;
}

function include(filePath, fileType) {
	var exp = /.*MLImport\s*\(\s*['|"]([a-zA-Z0-9_\.\-\/]*)['|"]\s*\)\s*;?/g;

	var currentDir = (filePath.indexOf('/') > -1) ? filePath.replace(/\/[^\/]+$/, '/') : '';
	
	var resolvedPath = path.resolve(filePath);
	
	if (include.cache[resolvedPath]) {
		MLLog('File already included: ' + filePath, 'grey');
		return '';
	}
	
	MLLog('Including file: ' + filePath, 'cyan');

	var sourceCode = getFileContents(filePath);
	
	if (!sourceCode && sourceCode !== '') {
		MLLog('File not found: ' + filePath, 'red');
		return '';
	}

	var fileExtension = filePath.replace(/.*[\.\/]/, '').toLowerCase();
	var fileType = supportedFileTypes[fileExtension];

	switch (fileType) {

		case 'script':
			try {
				var tmpCode = sourceCode.replace(exp, '');

				jsp.parse(tmpCode);

			} catch (e) {
				die('BuildError: ' + e.message + " (line: " + e.line + ", col: " + e.col + ", pos: " + e.pos + ")" + "\n\n" + e.stack);
			}

			break;

		case 'template':
			var name = filePath.match(/([^\/]+)(?=\.\w+$)/)[0];
		
			sourceCode = 'MLTemplates[\''+name+'\'] = \'' + escape(sourceCode).replace(/\n/g, '\\\n') + '\';';

			break;

		default:
			break;
	}
			
	include.cache[resolvedPath] = sourceCode;

	if (include.filesToWatch.indexOf(filePath) === -1) {
		include.filesToWatch.push(filePath);
	}

	var preprocessedCode = sourceCode.replace(exp, function (match, filePath) {
		if ( !match.match(/\s*\/\//)) {
			return include(currentDir + filePath);
		}
		
		return match;
	});
	
	return preprocessedCode;
}

include.cache = {};

function main() {

	var args = slice(process.argv, 2);

	while (args.length > 0) {
		var v = args.shift();
		
		switch (v) {
			case '-m':
			case '--minify':
				options.minify = true;
				break;
			case '-w':
			case '--watch':
				options.watch = true;
				break;
			case '-v':
			case '--verbose':
				options.verbose = true;
				break;
			case '-o':
			case '--output':
				options.outputFilePath
				break;
			case '-c':
			case '--config':
				options.configFilePath = args.shift();
				break;
			case '--debug':
				options.debug = true;
				break;
			case '-d':
			case '--document':
				options.document = true;
				break;
			case '-h':
			case '--help':
				showHelp();
				return;
			default:
				if (v.indexOf('-') == 0) {

					if (v === '--uglify') {
						die('Unrecognized flag: ' + v + ', did you mean --minify?');
					}

					die('Unrecognized flag: ' + v);
				}

				options.outputFilePath = args.shift();
		}
	}


	var configJSON = getFileContents(options.configFilePath);

	if (!configJSON) {
		die('configuration file not found: ' + options.configFilePath);
	}

	try {
		options.config = JSON.parse(configJSON)
	} catch (e) {
		die('Parse error in configuration file: ' + options.configFilePath);
	}

	options.debug = (/^true|1$/i).test(options.config.debug);
	options.outputFilePath = options.config.output;
	options.splashTemplate = options.config.splashTemplate;
	options.splashOutput = options.config.splashOutput;

	include.filesToWatch = [];

	try {
		exec('cd public && cp -apv . ../build', function () {
			build();
			watch();
		});	
	} catch (e) {
		die(e)
	}
}

function watch() {
	if (options.watch) {
		
		console.log('--------');

		var filesToWatch = include.filesToWatch;

		for (var i = 0, l = filesToWatch.length; i < l; i++) {
			// Create closure to keep fileName local
			// to this watchFileHandler
			(function () {
				
				var fileName = filesToWatch[i];
				
				var watchFileHandler = function (curr, prev) {
					if (+curr.mtime !== +prev.mtime) {
						console.log('--------');
						MLLog('Change detected to ' + fileName, 'yellow');

						build();
					}
				}

				fs.watchFile(fileName, watchFileHandler);

				MLLog('Watching ' + fileName, 'grey');

			})();
		}
	}
}

var supportedFileTypes = {
	'js': 'script',
	'css': 'style',
	'html': 'template'
};

function buildPackageScripts(packageName, currentPackage) {
	var preprocessedCode = '';
	var compiledCode;

	for (var i = 0, l = currentPackage.length; i < l; i++) {
		var currentFile = currentPackage[i];
		
		preprocessedCode += include(currentFile, 'script');
	}
	
	if (options.minify) {
		MLLog('Minifying: ' + packageName, 'yellow');
		
		try {
			compiledCode = uglify(preprocessedCode);
		} catch (e) {
			die('BuildError: ' + e.message + " (line: " + e.line + ", col: " + e.col + ", pos: " + e.pos + ")" + "\n\n" + e.stack);
		}

	} else {
		compiledCode = preprocessedCode;
	}

	return compiledCode;
}

function replaceCSSUrl(url, mimeType) {
    var fullPath = options.outputFilePath + url;
    var imageBuffer = getFileContents(fullPath, null);

    if (!imageBuffer) {
    	die('CSS url() reference: ' + fullPath + ' not found.');
    }

    var base64Image = new Buffer(imageBuffer, 'binary').toString('base64');

    return 'url(data:' + mimeType + ';base64,' + base64Image + ')';
}

function buildPackageStyleSheets(packageName, currentPackage) {
	var preprocessedCode = '';
	var compiledCode;

	for (var i = 0, l = currentPackage.length; i < l; i++) {
		var currentFile = currentPackage[i];
		
		preprocessedCode += include(currentFile, 'style');
	}
	
	if (options.base64EncodeCSSImages) {
		preprocessedCode = preprocessedCode.replace(/url\('?(\S+\.(png|jpg|jpeg))'?\)/gi, function (match, url, extension) {
		    return replaceCSSUrl(url, 'image/'+extension);
		});
	}

	if (options.minify) {
		MLLog('Minifying: ' + packageName, 'yellow');
		
		try {
			compiledCode = cleanCSS.process(preprocessedCode);
		} catch (e) {
			//die('BuildError: ' + e.message + " (line: " + e.line + ", col: " + e.col + ", pos: " + e.pos + ")" + "\n\n" + e.stack);
			die(e);
		}

	} else {
		compiledCode = preprocessedCode;
	}

	return compiledCode;
}

function buildPackageTemplates(packageName, currentPackage) {
	var packageObj = {};

	for (var i = 0, l = currentPackage.length; i < l; i++) {
		var currentFile = currentPackage[i];

		var name = currentFile.match(/([^\/]+)(?=\.\w+$)/)[0];
		
		packageObj[name] = getFileContents(currentFile);
	}

	die(packageObj);

	return packageObj;
}

function build() {

	var finalManifest = {};
	finalManifest.totalPackagesSize = 0;
	var buildTimestamp = (new Date()).getTime();

	include.cache = {};

	var packages = options.config.packages;
	var manifestPackages = [];

	for (var outputFilePath in packages) {
		var name = outputFilePath.match(/([^\/]+)(?=\.\w+$)/)[0];

		var currentPackage = packages[outputFilePath];
		
		var compiledCode;

		var fileExtension = outputFilePath.replace(/.*[\.\/]/, '').toLowerCase();
		var fileType = supportedFileTypes[fileExtension];

		switch (fileType) {
			case 'script':
				compiledCode = buildPackageScripts(outputFilePath, currentPackage);
				break;
			case 'style':
				compiledCode = buildPackageStyleSheets(outputFilePath, currentPackage);
				break;
			default:
				die('unsupported file type: ' + fileExtension);
		}

		var checksum = crc32(compiledCode);

		manifestPackages.push({
			name: name,
			src: outputFilePath,
			build: buildTimestamp.toString(),
			checksum: checksum.toString(),
			type: fileType
		});

		outputFilePath = options.outputFilePath + outputFilePath;
		
		MLLog('Writing ' + outputFilePath, 'magenta');

		var err = fs.writeFileSync(outputFilePath, compiledCode);

		finalManifest.totalPackagesSize += getFileSize(outputFilePath);

		if (err) {
			die(err);
		}
	}

	var manifestOutputPath = options.outputFilePath + 'manifest.json';

	MLLog('Writing package manifest to: ' + manifestOutputPath, 'magenta');

	finalManifest.packages = manifestPackages;

	var manifestString = JSON.stringify(finalManifest);

	if (options.splashTemplate) {
		var splashTemplate = getFileContents(options.splashTemplate);
		
		if (!splashTemplate) {
			// Couldn't find template
			MLLog('HTML Template not found: ' + options.splashTemplate, 'red');

		} else {
			// Generate index page from template
			var htmlString = doT.template(splashTemplate)({
				manifest: manifestString,
				bootloader: '',
				debug: options.debug
			});	

			var indexOutputPath = options.outputFilePath + options.splashOutput + '/bootloader.html';

			// Save our bootloader.html
			var err = fs.writeFileSync(indexOutputPath, htmlString);

			if (err) {
				die(err);
			}
		}
	}

	MLLog('Build complete.', 'green');

	if (options.document) {

		if (options.minify) {
			die('Sorry, you can\'t yet generate documentation and minify. Soon maybe?');
		}

		MLLog('Generating Documentation', 'magenta');
		exec('tools/jsdoc-toolkit/app/run.js -t=tools/jsdoc-toolkit/templates/jsdoc -d=doc src/js/ libs/MLKit/src/ -r --private', function (error, stdout, stderr) {
			
			MLLog('\nJSDoc stdout:' + stdout, 'yellow');
				MLLog('\nJSDoc stderr: \n' + stderr, 'yellow');

			if (error !== null) {
				console.log('exec error: ' + error);
			}
		});
	}
}

// Run
main();